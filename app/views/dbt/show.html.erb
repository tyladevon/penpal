<center>
  <% if completed? %>
    <section>
      <%= render partial: 'partials/feedback' %>
    </section>
  <% end %>

  <h3>DBT Quote: something to think about when you feel stuck</h3>
  <section id='dbt-quote'>
    <%= resource_facade.quote %>
  </section>

  <% if resource_facade.suggestion != 'journal' %>
    <h3>Journal about how you're feeling, then click save.</h3>
      <section id='journal-entry'>
      <%= form_for @entry do |f| %>
        <p>
          <%= f.text_area(:text, size: '100x20') %>
        </p>
        <p>
          <%= f.submit 'Save Entry', method: :post %>
        </p>
      <% end %>
      </section>
    <% end %>
</center>
